<?xml version="1.0" encoding="utf-8"?>
<com.simple.coreapp.ui.view.round.RoundFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="40dp"
    app:rv_cornerRadius_TL="16dp"
    app:rv_cornerRadius_TR="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <com.simple.coreapp.ui.view.round.RoundView
            android:id="@+id/v_anchor"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            app:rv_cornerRadius="150dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/anim_congratulations_1" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextHeadline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/TextBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <com.simple.coreapp.ui.view.round.RoundTextView
            android:id="@+id/tv_action"
            style="@style/TextBody1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="160dp"
            android:gravity="center" />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anim_congratulations_01" />
</com.simple.coreapp.ui.view.round.RoundFrameLayout>